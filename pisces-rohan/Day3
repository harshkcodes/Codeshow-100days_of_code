//Greatest of 4 numbers

#include <stdio.h>

int main()
{
    int num1, num2, num3, num4;
    printf("Enter 4 numbers of your choice : ");
    scanf("%d %d %d %d", &num1, &num2, &num3, &num4);
    if (num1 > num2 && num1 > num3 && num1 > num4)
    {
        printf("%d is the largest of 4 numbers.", num1);
    }
    else if (num2 > num1 && num2 > num3 && num2 > num4)
    {
        printf("%d is the largest of 4 numbers.", num2);
    }
    else if (num3 > num1 && num3 > num2 && num3 > num4)
    {
        printf("%d is the largest of 4 numbers.", num3);
    }
    else
    {
        printf("%d is the largest of 4 numbers.", num4);
    }
    printf("Done");
    return 0;
}
