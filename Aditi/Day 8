        int sum=0;
        if(b%2 !=0){
        for(int i=1;i<=b;i++){
            if(i%2 != 0)
            { sum=sum+i*i; } }}
        else
          {for(int i=1;i<=b;i++){
            if(i%2 == 0)
            { sum=sum+i*i; } }}
        cout<<sum<<endl;
    }
