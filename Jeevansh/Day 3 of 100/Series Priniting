Printing series 1+ x + x^2 + x^3 + .....

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    float x, sum;
    sum=0;
    int n;
    cout<<"Enter value of x\n";
    cin>>x;
    cout<<"\nEnter value of n\n";
    cin>>n;
    for(int i=0;i<=n;i++)
    {
        sum+=pow(x,i);
    }
    cout<<"\nSum="<<sum;
    return 0;
}
