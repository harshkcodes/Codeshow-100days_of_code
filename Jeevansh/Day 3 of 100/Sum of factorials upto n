#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    long int sum;
    sum=0;
    int n,fact;
    fact=1;
    cout<<"Enter value of n\n";
    cin>>n;
    for(int i=1;i<=n;i++)
    {
        fact=1;
        for(int j=1;j<=i;j++)
        {
            fact*=j;
            
        }
        sum+=fact;
    }
    cout<<"\nSum="<<sum;
    return 0;
}
