#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while (t--){
	    int n;
	    cin>>n;
	    int odd=1;
	    int even=2;
	    
	    for (int i=0 ; i<n;i++) {
	        for(int j=0 ; j<n ; j++){
	             if((i+j)%2==0)
	            {
	                cout<<odd<<" ";
	                odd+=2;
	            }
	            else
	            {
	                cout<<even<<" ";
	                even+=2;
	            }
	        }cout<<endl;
	    }
	    
	    
	}
	return 0;
}
