#include <bits/stdc++.h>
using namespace std;
int main()
{
    long long  x = 0;

    long long test_cases;
    cin >> test_cases;
    while (test_cases--)
    {
        
        int n, k, d;
    cin >> n >> k >> d;
    int arr[n];
    int total = 0;
    for(int i = 0; i<n; i++){
        int a;
        cin >> a;
        total+=a;
    }
    int x;
    x= total/k;
    if(x >= d){
        cout << d << "\n";
    }else{
        cout << x << "\n";
    }
}

       return 0;
}
