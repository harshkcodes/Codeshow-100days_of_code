#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t)
	{
	    int n,i,guest=0;
	    cin>>n;
	    int a[n];
	    for(i=0;i<n;i++)
	    {
	        cin>>a[i];
	    }
	    sort(a,a+n);
	    for(i=0;i<n;i++)
	    {
	        if(guest>=a[i])
	        {
	            guest++;
	        }
	        else
	        break;
	    }
	    cout<<guest<<endl;
	    t--;
	}
	return 0;
}
