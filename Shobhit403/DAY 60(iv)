#include <iostream>
#include <algorithm>
#include <cmath>
using namespace std;
int main() 
{
	int t;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    long long int a[n];
	    for (int i=0;i<n;i++)
	    {
	        cin>>a[i];
	    }
	    sort (a , a+n);
	    //int x,y,z;
	    //if (n%2==0)
	      //  x=a[0];
	       // y=a[n/2];
	        //z = a[n-1];
	       long long int ans = 2*abs(a[0]-a[n-1]);
	       // ans = max;
	    cout <<ans<<endl;
	}
	return 0;
}
