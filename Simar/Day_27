SMALLEST POSSIBLE WHOLE NUMBER

#include <iostream>
using namespace std;

int main() {
    int n;
    cin>>n;
    for(int i = 0;i<n;i++)
    {
        int p,k;
        cin>>p>>k;
        int s=0;
        if(p<k)
        {
            cout<<p<<endl;
        }
        else if(p==k)
        {
            s= p-k;
            cout<<s<<endl;
        }
        else if(k==0)
        {
            cout<<p<<endl;
        }
        else if(p>k) 
        { 
            s=p%k;
            cout<<s<<endl;
        }
        else{
            cout<<0;
        }
    }
	// your code goes here
	return 0;
}
