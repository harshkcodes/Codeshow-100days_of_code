LETTER CASE PERMUTATION.cpp

class Solution
{
public:

vector<string> letterCasePermutation(string s)
    {
       int i=0;
       vector<string > v;
       v.push_back(s);
       for(int i=0;i<s.size();i++)
           {
             if(isalpha(s[i]))
                 {
                    int si=v.size();
                    for(int j=0;j<si;j++) 
                         {
                             string tmp=v[j];
                             if(islower(tmp[i]))
                                  tmp[i]=toupper(tmp[i]);
                             else
                                  tmp[i]=tolower(tmp[i]); 
                              v.push_back(tmp);
                            }
                   }
           }
       return v;
    }
};
